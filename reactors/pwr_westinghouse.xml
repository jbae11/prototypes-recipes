<!-- WestingHouse PWR

3411 MWt // 1150 MWe // eps = 33.7%
Coolant/Moderator = H20
Active Core Volume (l) = 32,800 
Avg core power density (kW/l) = 104 
Fuel Weight (kg) = 90,200 
Num Assem = 193
-> weight per assem ~ 467 kg
BU (GWd/MTU) = 33
Conversion Ratio = 0.5
Fuel array = 17 x 17
Fuel enrichment = 2.1 / 2.6 / 3.1

-->

<facility>
      <name>westinghouse_pwr</name>
      <config>
        <Reactor>
          <fuel_inrecipes>  <val>uox_recipe</val>       </fuel_inrecipes>
          <fuel_outrecipes> <val>used_uox_recipe</val>  </fuel_outrecipes>
          <fuel_incommods>  <val>uox</val>                   </fuel_incommods>
          <fuel_outcommods> <val>used_uox</val>             </fuel_outcommods>
          <fuel_prefs>      <val>1.0</val>                   </fuel_prefs>
          <cycle_time>18</cycle_time>
          <!-- Average refueling was 43 days (Barq, NEI. 2012) -->
          <refuel_time>1</refuel_time>
          <!-- 90200/193 ~ 467 kg -->
          <assem_size>467</assem_size>
          <n_assem_core>193</n_assem_core>
          <!-- 193/3 ~ 64 assem/batch -->
          <n_assem_batch>64</n_assem_batch>
          <power_cap>1150</power_cap>
        </Reactor>
      </config>
  </facility>